<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PL.Pages.DronesViewTab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="#3E065F"/>
            <Setter Property="Background" Value="#D669"/>
            <Setter Property="TextElement.FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="25"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#DBD8E3">
        <DataGrid x:Name="DroneGrid" ItemsSource="{Binding Drones}" Background="#352F44" Foreground="#CAF0F8" 
                  CanUserSortColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,69,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Header=" Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Width="Auto" Header="From" Binding="{Binding Package.Sender.Name}"/>
                <DataGridTextColumn Width="Auto" Header="To" Binding="{Binding Package.Reciver.Name}"/>
                <DataGridTextColumn Width="Auto" Header="Current location(lat.)" Binding="{Binding CurrentLocation.Latitude}"/>
                <DataGridTextColumn Width="Auto" Header="Current location(long.)" Binding="{Binding CurrentLocation.Longitude}"/>
                <DataGridTextColumn Width="Auto" Header="Battery" Binding="{Binding Battery, StringFormat=\{0\}%}"/>
                <DataGridTextColumn Width="Auto" Header="Model" Binding="{Binding Model}"/>
                <DataGridTextColumn Width="Auto" Header="State" Binding="{Binding State}"/>
                <DataGridTextColumn Width="Auto" Header="Weight group" Binding="{Binding Weight}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="116,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top">State:</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16">Sort By:</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="400,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top">Maximum weight:</TextBlock>
            <CheckBox Content="CheckBox" FontSize="12" HorizontalAlignment="Left" Margin="150,24,0,0" VerticalAlignment="Top" Height="27" Width="81">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
    </Grid>

</UserControl>
