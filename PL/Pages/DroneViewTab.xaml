             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#DBD8E3">
        <TextBlock Name="DroneId" HorizontalAlignment="Center" Margin="0,71,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="94" Width="136"/>
        <TextBox Name ="DroneName" HorizontalAlignment="Left" Margin="169,311,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
