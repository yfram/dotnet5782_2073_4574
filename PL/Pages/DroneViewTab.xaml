        <Button Name="DroneNextOp" Content="DroneNextOp" HorizontalAlignment="Left" Margin="521,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.522,-0.004" Click="DroneNextOp_Click"/>

