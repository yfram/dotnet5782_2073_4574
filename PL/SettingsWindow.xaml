<UserControl x:Class="PL.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             Height="300" Width="500">
    <Grid Background="{DynamicResource SettingsWindowBack}" d:Background="SlateGray">
        <TextBlock Text="Theme:" FontSize="25" Margin="105,0,295,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="Options" FontSize="17" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Height="33" Width="150" Margin="210,0,0,0"/>
        <Button Content="Apply" Click="ApplyChanges" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="415,258,0,0"/>
    </Grid>
</UserControl>
